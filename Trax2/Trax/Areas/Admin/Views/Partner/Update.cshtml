@model Partner
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Update Partner</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-area="admin" asp-controller="partner" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="Link">Link</label>
                    <input type="text" class="form-control" id="Link" asp-for="@Model.Link">
                    <span asp-validation-for="@Model.Link" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" id="image" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                    <img class="mt-2" src="~/Uploads/Images/@Model.Image" height="50px" alt="Image" />

                </div>

                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="Image" value="@Model.Image" />


                <button type="submit" class="btn btn-primary">Update</button>
            </form>


        </div>

    </div>
</div>


