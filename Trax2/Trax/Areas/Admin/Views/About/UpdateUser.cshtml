@model User
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Update User</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-area="admin" asp-controller="about" asp-action="UpdateUser" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label for="Position">Position</label>
                    <textarea type="text" class="form-control" id="Position" asp-for="@Model.Position"></textarea>
                    <span asp-validation-for="@Model.Position" class="text-danger"></span>

                </div>
                
               
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" id="image" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                    <img class="mt-2" src="~/Uploads/Images/@Model.Image" height="100px" alt="Image" />

                </div>

                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="Image" value="@Model.Image" />


                <button type="submit" class="btn btn-primary">Update</button>
            </form>


        </div>

    </div>
</div>


