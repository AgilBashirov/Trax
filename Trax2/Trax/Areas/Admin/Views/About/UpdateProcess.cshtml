@model Process
@{
    ViewData["Title"] = "UpdateProcess";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Process</h2>
            <div @*asp-validation-summary="All"*@ class="text-danger"></div>
            <form asp-area="admin" asp-controller="about" asp-action="UpdateProcess" method="post">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>

                    <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />

                </div>
                <div class="form-group">
                    <label for="subtitle">Subtitle</label>
                    <input type="text" class="form-control" id="subtitle" asp-for="@Model.SubTitle">
                    <span asp-validation-for="@Model.SubTitle" class="text-danger"></span>

                </div>


                <button type="submit" class="btn btn-primary">Update</button>
            </form>


        </div>

    </div>
</div>


